{
  "name": "TicTacToe_Typescript",
  "version": "1.0.0",
  "description": "A Tic Tac Toe board game in Typescript",
  "main": "index.js",
  "scripts": {
    "prettier": "prettier --config .prettierrc 'lib/**/*.{ts,js}' --write",
    "lint": "eslint . --ext .ts --fix",
    "dev": "nodemon --watch 'lib/**/*.ts' --exec 'ts-node' lib/cli/AppRunner.ts",
    "test-web": "cd lib/web && npm test",
    "start-web": "cd lib/web && npm start",
    "test-cli": "jest lib/__test__",
    "start-cli": "'ts-node' lib/cli/AppRunner.ts",
    "start": "node server.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chokonaira/TicTacToe_Typescript.git"
  },
  "keywords": [],
  "author": "Henry Okonkwo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chokonaira/TicTacToe_Typescript/issues"
  },
  "homepage": "https://github.com/chokonaira/TicTacToe_Typescript#readme",
  "dependencies": {
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.1",
    "@types/enzyme": "^3.10.8",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "express": "^4.17.1",
    "i": "^0.3.6",
    "npm": "^7.5.2",
    "path": "^0.12.7",
    "prompts": "^2.4.0",
    "tictactoe-game-modules": "^1.0.0",
    "ts-node": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/register": "^7.12.1",
    "@types/jasmine": "^3.6.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "core-js": "^3.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jasmine": "^3.6.3",
    "jasmine-spec-reporter": "^6.0.0",
    "jest": "26.6.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "regenerator-runtime": "^0.13.7",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsconfig": "tsconfig.json"
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/mocks.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/mocks.js"
    }
  }
}
