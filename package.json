{
  "name": "TicTacToe_Typescript",
  "version": "1.0.0",
  "description": "A Tic Tac Toe board game in Typescript",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "prettier": "prettier --config .prettierrc 'lib/**/*.{ts,js}' --write",
    "lint": "eslint . --ext .ts --fix",
    "dev": "nodemon --watch 'lib/**/*.ts' --exec 'ts-node' lib/App.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chokonaira/TicTacToe_Typescript.git"
  },
  "keywords": [],
  "author": "Henry Okonkwo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chokonaira/TicTacToe_Typescript/issues"
  },
  "homepage": "https://github.com/chokonaira/TicTacToe_Typescript#readme",
  "dependencies": {
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.1",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "prompts": "^2.4.0",
    "ts-node": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/register": "^7.12.1",
    "@types/jasmine": "^3.6.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jasmine": "^3.6.3",
    "jasmine-spec-reporter": "^6.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsconfig": "jest.tsconfig.json"
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/mocks.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/mocks.js"
    }
  }
}
